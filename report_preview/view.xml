        <field name="model">tailor.map</field>
        <field name="inherit_id" ref="joli_tailor.tailor_map_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" name="action_preview_so" type="object" icon="fa-eye">
                    <span class="o_stat_text">Preview</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
